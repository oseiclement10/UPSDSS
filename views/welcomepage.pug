doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="shortcut icon", href="./images/brainwork.png", type="image/x-icon")
        title Welcome To UPSDSS
        meta(name="description", content="Welcome to UPSDSS , a guide to university program selection")
        link(rel="stylesheet", href="./css/main.css")
    body
     header 
      .navbar 
       .logo 
        .logo_image 
         img(src="./images/brainwork.png", alt="UPS", srcset="")
        .logo_text 
         h1
          span.frs UPS
          span.sec DSS
       .links
        a(href="/") Home 
     main
      .container 
       .illus 
        img(src="./images/learn__1.png", alt="decision guide")
       .intro 
        .intro_msg 
         h1 Welcome 
         p John Doe 
      .toselect 
       h1  Please Tick The Program You Offered in Senior High School.
      .options 
       form(action="" name="programoffered")
        .form_cont
            .opt_cont
                label(for="gs") General Science 
                input(type="checkbox",class="opt" name="program" value="generalscience" id="gs")       
            .opt_cont 
                label(for="bs") Business
                input(type="checkbox",class="opt" name="program" value="business" id="bs")
            .opt_cont 
                label(for="ga") General Arts
                input(type="checkbox",class="opt" name="program" value="generalarts" id="ga")
            .opt_cont 
                label(for="he") Home Econs 
                input(type="checkbox",class="opt" name="program" value="homeeconomics" id="he")
            .opt_cont 
                label(for="va") Visual Arts
                input(type="checkbox",class="opt" name="program" value="visualarts" id="va")
            .opt_cont 
                label(for="tl") Technical 
                input(type="checkbox",class="opt" name="program" value="technical" id="tl")  
        .submit 
            input(type="submit", value="continue >>") 
        
         
        
